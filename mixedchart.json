{
	"name": "plot_mixed_chart",
	"description": "Plots a mixed chart from bar/line/area chart from data",
	"parameters": {
		"type": "object",
		"description": "Options for ApexCharts",
		"properties": {
			"series": {
				"type": "array",
				"items": {
					"type": "object",
					"properties": {
						"name": {
							"type": "string"
						},
						"type": {
							"type": "string",
							"enum": [
								"line",
								"column",
								"area"
							]
						},
						"data": {
							"type": "array",
							"items": {
								"type": "number"
							}
						}
					},
					"required": [
						"name",
						"type",
						"data"
					]
				}			
			},
			"chart": {
				"type": "object",
				"properties": {
					"height": {
						"type": "number"
					},
					"type": {
						"type": "string",
						"enum": [
							"line"
						]
					},
					"stacked": {
						"type": "boolean"
					}
				},
				"required": [
					"height",
					"type"
				]
			},
			"stroke": {
				"type": "object",
				"properties": {
					"width": {
						"type": "array",
						"items": {
							"type": "number"
						}
					},
					"curve": {
						"type": "string",
						"enum": [
							"smooth",
							"straight",
							"stepline"
						]
					}
				},
				"required": [
					"width",
					"curve"
				]
			},
			"plotOptions": {
				"type": "object",
				"properties": {
					"bar": {
						"type": "object",
						"properties": {
							"columnWidth": {
								"type": "string"
							}
						}
					}
				}
			},
			"fill": {
				"type": "object",
				"properties": {
					"type": {
						"type": "string"
					},
					"opacity": {
						"type": "array",
						"items": {
							"type": "number"
						}
					}
				},
				"required": [
					"opacity"
				]
			},
			"labels": {
				"type": "array",
				"items": {
					"type": "string"
				}			
			},
			"xaxis": {
				"type": "object",
				"properties": {
					"categories": {
						"type": "array",
						"items": {
							"type": "string"
						},
						"description": "Categories for x-axis."
					}
				},
				"description": "X-Axis configuration."
			},
			"yaxis": {
				"type": "array",
				"items": {
					"type": "object",
					"properties": {
						"opposite": {
							"type": "boolean"
						},
						"title": {
							"type": "object",
							"properties": {
								"text": {
									"type": "string"
								}
							},
							"required": [
								"text"
							]
						}
					}
				}
			},
			"tooltip": {
				"type": "object",
				"properties": {
					"shared": {
						"type": "boolean"
					},
					"intersect": {
						"type": "boolean"
					},
					"y": {
						"type": "object",
						"properties": {
							"formatter": {
								"type": "string",
								"format": "javascript"
							}
						}
					}
				}
			},
			"title": {
				"type": "object",
				"properties": {
					"text": {
						"type": "string"
					}
				}
			},
			"dataLabels": {
				"type": "object",
				"properties": {
					"enabled": {
						"type": "boolean"
					},
					"enabledOnSeries": {
						"type": "array",
						"items": {
							"type": "number"
						}
					}
				}
			}
		},
		"required": [
			"series",
			"chart",
			"labels",
			"xaxis",
			"yaxis"
		]
	}
}