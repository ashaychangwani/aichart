{
	"name": "plot_chart",
	"description": "Plots a chart from data: bar, line, area, scatter, boxPlot and candlestick",
	"parameters": {
		"type": "object",
		"description": "Options for ApexCharts",
		"properties": {
			"series": {
				"type": "array",
				"items": {
					"type": "object",
					"properties": {
						"name": {
							"type": "string"
						},
						"type": {
							"type": "string",
							"enum": [
								"line",
								"column",
								"area",
								"candlestick",
								"scatter",
								"boxPlot",
								"bubble"
							]
						},
						"data": {
							"oneOf": [
								{
									"type": "array",
									"items": {
									  "type": "array",
									  "items": {
										"type": "number"
									  },
									  "minItems": 2,
									  "maxItems": 2,
									  "description": "The data for a scatter plot, each array contains a pair of coordinates."
									}
								},
								{
									"type": "array",
									"items": {
									  "type": "array",
									  "items": {
										"type": "number"
									  },
									  "minItems": 3,
									  "maxItems": 3,
									  "description": "The data for a bubble plot, each array contains a pair of coordinates and the third attribute is the size of the bubble."
									}
								},
								{
									"type": "array",
									"description": "Data for a candlestick and boxPlot charts",
									"items": {
										"type": "object",
										"properties": {
											"x": {
												"type": "string",
												"description": "The x value for the data point"
											},
											"y": {
												"type": "array",
												"description": "The y value(s) for the data point",
												"items": {
													"type": "number"
												},
												"minItems": 4,
												"maxItems": 4
											}
										},
										"required": [
											"x",
											"y"
										]
									}
								},
								{
									"type": "array",
									"items": {
										"type": "number"
									},
									"description": "Data for the series in number format"
								},
								{
									"type": "array",
									"items": {
										"type": "object",
										"properties": {
											"x": {
												"type": "string",
												"description": "X axis data point"
											},
											"y": {
												"type": "number",
												"description": "Y axis data point"
											},
											"goals": {
												"type": "array",
												"items": {
													"type": "object",
													"properties": {
														"name": {
															"type": "string",
															"description": "Name of goal"
														},
														"value": {
															"type": "number",
															"description": "Value of goal"
														}
													},
													"required": [
														"name",
														"value"
													]
												},
												"description": "Goals for the data point"
											}
										},
										"required": [
											"x",
											"y"
										]
									},
									"description": "Data for the series in object format"
								}
							],
							"description": "Data for the series"
						},
						"group": {
							"type": "string",
							"description": "Group for stacked bar chart"
						}
					},
					"required": [
						"name",
						"type",
						"data"
					]
				}
			},
			"chart": {
				"type": "object",
				"properties": {
					"height": {
						"type": "number"
					},
					"type": {
						"type": "string",
						"enum": [
							"line"
						]
					},
					"stacked": {
						"type": "boolean",
						"description": "If the chart is stacked or not"
					},
					"zoom": {
						"type": "object",
						"properties": {
							"type": {
								"type": "string",
								"enum": [
									"x"
								],
								"description": "Type of zoom."
							},
							"enabled": {
								"type": "boolean",
								"description": "Whether zoom is enabled."
							},
							"autoScaleYaxis": {
								"type": "boolean",
								"description": "Whether y axis scales automatically."
							}
						},
						"description": "Zoom configuration for the chart."
					},
					"toolbar": {
						"type": "object",
						"properties": {
							"autoSelected": {
								"type": "string",
								"enum": [
									"zoom"
								],
								"description": "Auto selected tool in the toolbar."
							}
						},
						"description": "Toolbar configuration for the chart."
					}
				},
				"required": [
					"height",
					"type"
				]
			},
			"colors": {
				"type": "array",
				"items": {
					"type": "string"
				},
				"description": "Color properties for the chart"
			},
			"stroke": {
				"type": "object",
				"properties": {
					"width": {
						"type": "array",
						"items": {
							"type": "number"
						}
					},
					"curve": {
						"type": "string",
						"enum": [
							"smooth",
							"straight",
							"stepline"
						]
					}
				},
				"required": [
					"width",
					"curve"
				]
			},
			"plotOptions": {
				"type": "object",
				"properties": {
					"bar": {
						"type": "object",
						"properties": {
							"columnWidth": {
								"type": "string"
							},
							"horizontal": {
								"type": "boolean",
								"description": "If bar chart is horizontal or not"
							},
							"dataLabels": {
								"type": "object",
								"properties": {
									"position": {
										"type": "string",
										"enum": [
											"top"
										],
										"description": "Position of data labels"
									}
								},
								"description": "Data label properties for bar chart"
							}
						}
					}
				}
			},
			"fill": {
				"type": "object",
				"properties": {
					"type": {
						"type": "string"
					},
					"opacity": {
						"type": "array",
						"items": {
							"type": "number"
						}
					}
				},
				"required": [
					"opacity"
				]
			},
			"labels": {
				"type": "array",
				"items": {
					"type": "string"
				}
			},
			"xaxis": {
				"type": "object",
				"properties": {
					"categories": {
						"type": "array",
						"items": {
							"type": "string"
						},
						"description": "Categories for x-axis."
					},
					"title": {
						"type": "object",
						"properties": {
							"text": {
								"type": "string",
								"description": "Title text of the X-axis"
							}
						},
						"description": "Title for the X-axis"
					}
				},
				"description": "X-Axis configuration."
			},
			"yaxis": {
				"type": "array",
				"items": {
					"type": "object",
					"properties": {
						"opposite": {
							"type": "boolean"
						},
						"title": {
							"type": "object",
							"properties": {
								"text": {
									"type": "string"
								}
							},
							"required": [
								"text"
							]
						}
					}
				}
			},
			"tooltip": {
				"type": "object",
				"properties": {
					"shared": {
						"type": "boolean"
					},
					"intersect": {
						"type": "boolean"
					},
					"y": {
						"type": "object",
						"properties": {
							"formatter": {
								"type": "string",
								"format": "javascript"
							}
						}
					}
				}
			},
			"title": {
				"type": "object",
				"properties": {
					"text": {
						"type": "string"
					}
				}
			},
			"dataLabels": {
				"type": "object",
				"properties": {
					"enabled": {
						"type": "boolean"
					},
					"enabledOnSeries": {
						"type": "array",
						"items": {
							"type": "number"
						}
					}
				}
			},
			"legend": {
				"type": "object",
				"properties": {
					"show": {
						"type": "boolean",
						"description": "If legend is shown or not"
					},
					"showForSingleSeries": {
						"type": "boolean",
						"description": "If legend is shown for single series or not"
					},
					"customLegendItems": {
						"type": "array",
						"items": {
							"type": "string"
						},
						"description": "Custom legend items"
					},
					"markers": {
						"type": "object",
						"properties": {
							"fillColors": {
								"type": "array",
								"items": {
									"type": "string"
								},
								"description": "Fill colors for legend markers"
							}
						},
						"description": "Marker properties for the legend"
					}
				},
				"description": "Legend properties"
			}
		},
		"required": [
			"series",
			"chart",
			"labels",
			"xaxis",
			"yaxis"
		]
	}
}